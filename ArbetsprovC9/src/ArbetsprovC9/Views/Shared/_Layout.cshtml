<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/css/bootstrap.css" rel="stylesheet" />
    <script src="~/js/jquery.js"></script>
    <script src="~/js/bootstrap.js"></script>
</head>
<body>
    <div>
        <div class="container" style="padding:0px">
            @*Navbar överst*@
            <nav class="navbar navbar-inverse" style="background-color:rgba(0,0,38,0.7); border:none">
                <div class="container-fluid">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        <a class="navbar-brand" href="/home/index">Go musik</a>
                    </div>
                    <div class="collapse navbar-collapse" id="myNavbar">
                        <ul class="nav navbar-nav">
                            <li><a href="/suggestions/FindMusic">Hitta musik</a></li>
                        </ul>
                    </div>
                </div>
            </nav>
        </div>
        <div id="bigbody" class="container">
            @RenderBody()
        </div>
        <footer>
            <div class="container" style="padding:0px">
                <nav class="navbar navbar-inverse" style="background-color:rgba(0,0,38,0.7); border:none; margin:0">
                    <ul class="nav navbar-nav">
                        <li>
                            <a href="/aboutus">About us</a>
                        </li>
                    </ul>
                </nav>
            </div>
        </footer>
    </div>
</body>
</html>